<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MODIFICAR RESERVA"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/confirm_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="confirmar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre:" />

    <EditText
        android:id="@+id/nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="890432JIO" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Número:" />

    <EditText
        android:id="@+id/numero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="monoplaza" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha de recogida:" />

    <EditText
        android:id="@+id/fecha_recogida"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="08/07/2025" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha de devolución:" />

    <EditText
        android:id="@+id/fecha_devolucion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="15/07/2025" />

    <Button
        android:id="@+id/add_quad_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Añadir quad" />

</LinearLayout>